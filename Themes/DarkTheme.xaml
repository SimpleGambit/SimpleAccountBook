<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- 배경 색상 -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#252526"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#3E3E42"/>
    <SolidColorBrush x:Key="DetailBackgroundBrush" Color="#2D2D30"/>
    
    <!-- 텍스트 색상 -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="LightGrayTextBrush" Color="#3E3E42"/>
    <SolidColorBrush x:Key="TextBrushBlack" Color="Black"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#B0B0B0"/>
    <SolidColorBrush x:Key="DisabledTextBrush" Color="#808080"/>
    
    <!-- 입력 컨트롤 색상 -->
    <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="TextBoxBorderBrush" Color="#3E3E42"/>
    <SolidColorBrush x:Key="TextBoxFocusBorderBrush" Color="#E0E0E0"/>
    
    <!-- 버튼 색상 -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#252526"/>
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="#252526"/>
    <SolidColorBrush x:Key="ButtonHoverBackgroundBrush" Color="#252526"/>
    
    <!-- 리스트/그리드 색상 -->
    <SolidColorBrush x:Key="ListBackgroundBrush" Color="#252526"/>
    <SolidColorBrush x:Key="ListBorderBrush" Color="#3E3E42"/>
    <SolidColorBrush x:Key="ListItemHoverBrush" Color="#FF1E1E1E"/>
    <SolidColorBrush x:Key="ListItemSelectedBrush" Color="Black"/>
    
    <!-- 메뉴 색상 -->
    <SolidColorBrush x:Key="MenuBackgroundBrush" Color="#FF1E1E1E"/>
    <SolidColorBrush x:Key="MenuBorderBrush" Color="#FF1E1E1E"/>
    <SolidColorBrush x:Key="MenuTextBrush" Color="Gray"/>
    <SolidColorBrush x:Key="MenuHoverTextBrush" Color="White"/>

    <!-- Expander 색상 -->
    <SolidColorBrush x:Key="ExpanderBackgroundBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="ExpanderBorderBrush" Color="#3E3E42"/>
    <SolidColorBrush x:Key="ExpanderContentBackgroundBrush" Color="#252526"/>
    
    <!-- 상태 표시 색상 -->
    <SolidColorBrush x:Key="WarningBackgroundBrush" Color="#4D1F1F"/>
    <SolidColorBrush x:Key="SuccessBackgroundBrush" Color="#e0dede"/>
    <SolidColorBrush x:Key="SuccessBorderBrush" Color="Gray"/>
    
    <!-- 기타 색상 -->
    <SolidColorBrush x:Key="ProgressBarBorderBrush" Color="#3E3E42"/>
    <SolidColorBrush x:Key="StatusLogBackgroundBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="StatusLogBorderBrush" Color="#3E3E42"/>
    <SolidColorBrush x:Key="StatusLogTextBrush" Color="#9E9E9E"/>
    
    <!-- 상호작용 하이라이트 -->
    <SolidColorBrush x:Key="InteractionHighlightBrush" Color="#FF1E1E1E"/>
    
    <!-- 달력 색상 -->
    <SolidColorBrush x:Key="CalendarCellBackgroundBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="CalendarCellBorderBrush" Color="#3E3E42"/>
    <SolidColorBrush x:Key="CalendarHeaderBackgroundBrush" Color="#252526"/>
    <SolidColorBrush x:Key="CalendarHeaderBorderBrush" Color="#3E3E42"/>
    <SolidColorBrush x:Key="CalendarNavigationBackgroundBrush" Color="#252526"/>
    <SolidColorBrush x:Key="CalendarWeeklySumBackgroundBrush" Color="#252526"/>
    <SolidColorBrush x:Key="CalendarTextBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="CalendarNavigationButtonBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="CalendarNavigationButtonHoverBrush" Color="#FFFFFF"/>
    
    <!-- 탭 헤더 색상 -->
    <SolidColorBrush x:Key="TabHeaderTextBrush" Color="#E0E0E0"/>
    
    <!-- 거래 타입별 색상 -->
    <SolidColorBrush x:Key="IncomeTextBrush" Color="#6ABF69"/>
    <SolidColorBrush x:Key="ExpenseTextBrush" Color="#FFE53935"/>
    <SolidColorBrush x:Key="ErrorTextBrush" Color="#EF5350"/>
    <SolidColorBrush x:Key="GrayTextBrush" Color="#9E9E9E"/>
    
    <!-- 일요일/토요일 색상 -->
    <SolidColorBrush x:Key="SundayTextBrush" Color="#EF5350"/>
    <SolidColorBrush x:Key="SaturdayTextBrush" Color="#42A5F5"/>
    
    <!-- 달력 불일치 경고 색상 -->
    <SolidColorBrush x:Key="CalendarMismatchBackgroundBrush" Color="#5c1713"/>
    <SolidColorBrush x:Key="CalendarMismatchSelectedBackgroundBrush" Color="#5c020e"/>
    
    <!-- ListView 헤더 및 스크롤바 색상 -->
    <SolidColorBrush x:Key="ListViewHeaderBackgroundBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="GridViewColumnHeaderBackgroundBrush" Color="#FF2D2D30"/>
    <SolidColorBrush x:Key="ScrollBarBackgroundBrush" Color="#FF2D2D30"/>
    <SolidColorBrush x:Key="ScrollBarThumbBrush" Color="#FF9E9E9E"/>
</ResourceDictionary>
