<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- 배경 색상 -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#FFE6E6E6"/>
    <SolidColorBrush x:Key="DetailBackgroundBrush" Color="#FAFAFA"/>
    
    <!-- 텍스트 색상 -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="Black"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#666666"/>
    <SolidColorBrush x:Key="TextBrushBlack" Color="Black"/>
    <SolidColorBrush x:Key="LightGrayTextBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="DisabledTextBrush" Color="#888888"/>
    
    <!-- 입력 컨트롤 색상 -->
    <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="TextBoxBorderBrush" Color="#DDDDDD"/>
    <SolidColorBrush x:Key="TextBoxFocusBorderBrush" Color="#0078D4"/>
    
    <!-- 버튼 색상 -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="WhiteSmoke"/>
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="WhiteSmoke"/>
    <SolidColorBrush x:Key="ButtonHoverBackgroundBrush" Color="#E0E0E0"/>
    
    <!-- 리스트/그리드 색상 -->
    <SolidColorBrush x:Key="ListBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="ListBorderBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="ListItemHoverBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="ListItemSelectedBrush" Color="LightGray"/>

    <!-- 메뉴 색상 -->
    <SolidColorBrush x:Key="MenuBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="MenuBorderBrush" Color="White"/>
    <SolidColorBrush x:Key="MenuTextBrush" Color="Gray"/>
    <SolidColorBrush x:Key="MenuHoverTextBrush" Color="Black"/>
    
    <!-- Expander 색상 -->
    <SolidColorBrush x:Key="ExpanderBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="ExpanderBorderBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="ExpanderContentBackgroundBrush" Color="#F9F9F9"/>
    
    <!-- 상태 표시 색상 -->
    <SolidColorBrush x:Key="WarningBackgroundBrush" Color="#FFFFE5E5"/>
    <SolidColorBrush x:Key="SuccessBackgroundBrush" Color="#E8F5E9"/>
    <SolidColorBrush x:Key="SuccessBorderBrush" Color="#C8E6C9"/>
    
    <!-- 기타 색상 -->
    <SolidColorBrush x:Key="ProgressBarBorderBrush" Color="White"/>
    <SolidColorBrush x:Key="StatusLogBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="StatusLogBorderBrush" Color="#FFE9E9E9"/>
    <SolidColorBrush x:Key="StatusLogTextBrush" Color="Black"/>

    <!-- 상호작용 하이라이트 -->
    <SolidColorBrush x:Key="InteractionHighlightBrush" Color="WhiteSmoke"/>
    
    <!-- 달력 색상 -->
    <SolidColorBrush x:Key="CalendarCellBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="CalendarCellBorderBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="CalendarHeaderBackgroundBrush" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="CalendarHeaderBorderBrush" Color="#D0D0D0"/>
    <SolidColorBrush x:Key="CalendarNavigationBackgroundBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="CalendarWeeklySumBackgroundBrush" Color="#F8F8F8"/>
    <SolidColorBrush x:Key="CalendarTextBrush" Color="Black"/>
    <SolidColorBrush x:Key="CalendarNavigationButtonBrush" Color="#555555"/>
    <SolidColorBrush x:Key="CalendarNavigationButtonHoverBrush" Color="#333333"/>
    
    <!-- 탭 헤더 색상 -->
    <SolidColorBrush x:Key="TabHeaderTextBrush" Color="#444444"/>
    
    <!-- 거래 타입별 색상 -->
    <SolidColorBrush x:Key="IncomeTextBrush" Color="DarkGreen"/>
    <SolidColorBrush x:Key="ExpenseTextBrush" Color="Firebrick"/>
    <SolidColorBrush x:Key="ErrorTextBrush" Color="#B3261E"/>
    <SolidColorBrush x:Key="GrayTextBrush" Color="Gray"/>
    
    <!-- 일요일/토요일 색상 -->
    <SolidColorBrush x:Key="SundayTextBrush" Color="Red"/>
    <SolidColorBrush x:Key="SaturdayTextBrush" Color="Blue"/>
    
    <!-- 달력 불일치 경고 색상 -->
    <SolidColorBrush x:Key="CalendarMismatchBackgroundBrush" Color="#FFFFE5E5"/>
    <SolidColorBrush x:Key="CalendarMismatchSelectedBackgroundBrush" Color="#FFDCDC"/>
    
    <!-- ListView 헤더 및 스크롤바 색상 -->
    <SolidColorBrush x:Key="ListViewHeaderBackgroundBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="GridViewColumnHeaderBackgroundBrush" Color="#FFF5F5F5"/>
    <SolidColorBrush x:Key="ScrollBarBackgroundBrush" Color="#FFF5F5F5"/>
    <SolidColorBrush x:Key="ScrollBarThumbBrush" Color="#FF808080"/>
</ResourceDictionary>
